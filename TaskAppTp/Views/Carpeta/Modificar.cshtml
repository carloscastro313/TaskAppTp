@model TaskAppTp.Models.Carpeta

@{
    ViewData["Title"] = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex align-items-center">
    <a asp-action="Index" class="btn btn-primary rounded-circle" ><i class="bi bi-arrow-left"></i></a>
    <h1 class="mx-auto">Modificar carpeta</h1>
</div>
<hr />
<div class="d-flex justify-content-center mt-5">
    <div class="w-50">
        <form asp-action="Modificar" method="post" class="d-flex flex-column gap-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input asp-for="Id" type="hidden"/>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aplicar cambios" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

